{% extends 'base.html.twig' %}

{% block title %}
  Alfonzo Silva - Blog
{% endblock %}

{% block body %}
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <h1 style="margin-bottom: 50px; text-align:center;">Publicaciones</h1>
      <a href="/articulos/new" class="btn btn-primary" style="margin-bottom: 30px;">Publicar nuevo artículo</a>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for articulo in articulos %}
          <!-- Item nº1 -->
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h3>{{ articulo.titulo }}</h3>
                <small class="text-body-secondary">Autor: {{ articulo.autor }}</small>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="/articulos/{{articulo.id}}" class="btn btn-sm btn-outline-secondary" style="margin-top: 20px;">Ver</a>
                  </div>
                  <small class="text-body-secondary">{{ articulo.creado | date('d-m-Y')  }}</small>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>
{% endblock %}
